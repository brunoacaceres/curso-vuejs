type User {
  id: ID! @id @unique
  name: String!
  email: String! @unique
  password: String! 
}

type Account {
  id: ID! @id @unique
  user: User @relation(link: INLINE)
  description: String!
}

enum Operation {
  DEBIT
  CREDIT
}

type Category {
  id: ID! @id @unique
  user: User @relation(link: INLINE)
  description: String!
  operation: Operation!
}

type Record {
  id: ID! @id @unique
  user: User! @relation(link: INLINE)
  account: Account! @relation(link: INLINE)
  category: Category! @relation(link: INLINE)
  amount: Float!
  type: Operation!
  date: DateTime!
  description: String!
  tags: String
  note: String
}
